# Environment variables for StressSense Windows Application
# Copy this file to .env and update values for your environment

# Backend Configuration
BACKEND_URL=http://localhost:8000
API_PREFIX=/api/v1

# Application Settings
CONFIG_FILE=device_config.json
LOG_LEVEL=INFO

# Service Settings
SERVICE_NAME=StressSenseService
SERVICE_DISPLAY_NAME=StressSense Stress Detection Service

# Detection Settings
CAMERA_INDEX=0
CAPTURE_INTERVAL_MINUTES=30  # minutes between detections
FACE_QUALITY_THRESHOLD=0.6

# UI Settings
AUTO_ANALYSIS_INTERVAL_SECONDS=600  # 10 minutes for dev mode, set to 0 to disable
SERVICE_CHECK_INTERVAL_SECONDS=60   # how often service checks for scheduled tasks

# Retry and Timeout Settings
MAX_CAPTURE_ATTEMPTS=3
CAPTURE_RETRY_DELAY_SECONDS=0.5
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
REQUEST_TIMEOUT_SECONDS=10

# Emotion Detection Thresholds (minimum confidence percentages)
EMOTION_HAPPY_MIN_CONFIDENCE=20
EMOTION_NEUTRAL_MIN_CONFIDENCE=25
EMOTION_SAD_MIN_CONFIDENCE=30
EMOTION_ANGRY_MIN_CONFIDENCE=30
EMOTION_FEAR_MIN_CONFIDENCE=35
EMOTION_DISGUST_MIN_CONFIDENCE=35
EMOTION_SURPRISE_MIN_CONFIDENCE=30